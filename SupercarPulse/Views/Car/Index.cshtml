@model IEnumerable<Car>

<link rel="stylesheet" type="text/css" href="site.css">

@using (Html.BeginForm("Search", "Car", FormMethod.Get))
{
    <div class="search-container">
        <input type="text" name="searchString" class="search-input" placeholder="Find by Make or Model" />
        <button type="submit" class="search-btn">Search</button>
    </div>
}


<h2 style="margin-bottom: 40px; margin-top: 40px; font-weight:600;">SuperCars</h2>

<div style="display: block; margin-bottom: 40px;">
    <a href="/Car/InsertCar/" class="supercar-link">Add New Supercar</a>
</div>

<table class="index">
    <tr>
@*         <th>ID</th> *@
        <th> </th>
        <th>Emblem</th>
        <th>Make</th>
        <th>Model</th>
        <th>0-60 Time</th>
        <th class="larger-table">Engine</th>
        <th class="larger-table">Horsepower</th>
        <th>Engine Liter</th>
        <th></th>
    </tr>



    @foreach (var car in @Model)
    {
        string imgSrc = "";
                        if (car.ImageSrc != null)
                        {
                            var base64 = Convert.ToBase64String(car.ImageSrc);
                            imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                        }
                        else
                        {
                            
            imgSrc = "/imgs/Crap car.jpg";
                        }

        string logoSrc = "";
        if (car.CarLogo != null)
        {
            var base64 = Convert.ToBase64String(car.CarLogo);
            logoSrc = String.Format("data:image/gif;base64,{0}", base64);
        }
        else
        {
           
            logoSrc = "/imgs/Crap car.jpg";
        }
        <tr>

@*             <td>@car.Id</td> *@
            <td><a href="/Car/ViewCar/@car.Id" class="supercar-link" >More</a></td>
            <td style="padding: 30px 20px 30px 30px"><img src="@logoSrc" width="100" /></td>
            <td>@car.Make</td>
            <td>@car.Model</td>
            <td>@car.Zero_To_Sixty</td>
            <td>@car.Engine_Type</td>
            <td>@car.Horsepower</td>
            <td>@car.Engine_Liter</td>
            <td style="padding: 30px 20px 30px 30px"><img src="@imgSrc" class="viewcar"width="300" /></td>

        </tr>
        
       
    }

</table>


